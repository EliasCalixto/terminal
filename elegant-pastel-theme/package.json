{
  "name": "elegant-pastel-theme",
  "displayName": "Elias Elegant Pastel",
  "description": "Elegant pastel dark theme with Vim support and custom settings",
  "version": "1.0.0",
  "engines": { "vscode": "^1.84.0" },
  "categories": ["Themes"],
  "contributes": {
    "themes": [
      {
        "label": "Elias Elegant Pastel",
        "uiTheme": "vs-dark",
        "path": "./themes/elegant-pastel-color-theme.json"
      }
    ],
    "configurationDefaults": {
      "editor.fontFamily": "OverpassM Nerd Font Mono",
      "editor.fontSize": 15,
      "editor.minimap.enabled": false,
      "workbench.iconTheme": "file-icons",
      "terminal.integrated.fontSize": 15,
      "vim.statusBarColorControl": true
    }
  }
}